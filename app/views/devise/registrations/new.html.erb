<style>
  body { font-family: Arial, sans-serif; background: #f7f8fa; margin: 0; }
  .ems-header { background: #2d3748; color: #fff; padding: 24px 0; display: flex; align-items: center; justify-content: space-between; }
  .ems-title { font-size: 2rem; font-weight: bold; margin-left: 32px; }
  .ems-nav a { color: #90cdf4; margin: 0 16px; text-decoration: none; font-size: 1.1rem; font-weight: 500; }
  .auth-card { background: #fff; max-width: 400px; margin: 48px auto 32px auto; border-radius: 12px; box-shadow: 0 2px 16px #cbd5e1; padding: 32px 24px; }
  .form-group { margin-bottom: 18px; }
  label { display: block; margin-bottom: 6px; color: #4a5568; font-size: 0.95rem; }
  input { width: 100%; padding: 8px; border-radius: 6px; border: 1px solid #cbd5e1; font-size: 1rem; }
  .continue-btn { display: block; margin: 24px auto 0 auto; width: 80%; background: #2b6cb0; color: #fff; border: none; border-radius: 6px; padding: 12px; font-size: 1.1rem; font-weight: bold; cursor: pointer; }
  .ems-footer { background: #2d3748; color: #fff; text-align: center; padding: 18px 0; width: 100%; font-size: 0.95rem; position: relative; margin-top: 32px; }
</style>
<div class="auth-card">
  <h2 style="text-align:center; margin-bottom:24px;">Sign Up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <button class="continue-btn" type="submit" style="margin-left: 10%; margin-right: 10%;">Continue</button>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
<div class="ems-footer">
  &copy; 2026 SPEAK. All rights reserved.
</div>
